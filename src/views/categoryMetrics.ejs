<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Metrics - <%= category.name %>
    </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 30px;
        }

        h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 2.5rem;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .category-badge {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-delete {
            background: #f44336;
            color: white;
            padding: 6px 12px;
            font-size: 0.85rem;
        }

        .btn-edit {
            background: #4CAF50;
            color: white;
            padding: 6px 12px;
            font-size: 0.85rem;
        }

        .btn-secondary {
            background: #f5f5f5;
            color: #333;
        }

        .stats {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 8px;
            flex: 1;
            min-width: 200px;
        }

        .stat-card h3 {
            font-size: 0.9rem;
            opacity: 0.9;
            margin-bottom: 5px;
        }

        .stat-card .number {
            font-size: 2rem;
            font-weight: bold;
        }

        .metrics-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .metrics-table th,
        .metrics-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .metrics-table th {
            background: #f5f5f5;
            font-weight: bold;
            color: #333;
        }

        .metrics-table tr:hover {
            background: #f9f9f9;
        }

        .logic-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: bold;
            text-transform: uppercase;
        }

        .logic-count {
            background: #e3f2fd;
            color: #1976d2;
        }

        .logic-sum {
            background: #f3e5f5;
            color: #7b1fa2;
        }

        .logic-avg {
            background: #fff3e0;
            color: #f57c00;
        }

        .logic-none {
            background: #e8f5e9;
            color: #388e3c;
        }

        .group-by-badge {
            background: #fff9c4;
            color: #f57c00;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
        }

        .alert {
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            display: none;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .no-metrics {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }

        .no-metrics i {
            font-size: 4rem;
            margin-bottom: 20px;
            display: block;
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #667eea;
            text-decoration: none;
            font-weight: bold;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .actions-cell {
            display: flex;
            gap: 5px;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            margin: 5% auto;
            padding: 30px;
            border-radius: 10px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.3);
            max-height: 80vh;
            overflow-y: auto;
        }

        .modal h2 {
            margin-bottom: 20px;
            color: #333;
        }

        .modal-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
        }

        input,
        select,
        textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 5px;
            font-size: 1rem;
            font-family: inherit;
        }

        input:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #667eea;
        }

        .help-text {
            font-size: 0.85rem;
            color: #666;
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="container">
        <a href="/categories/game/<%= category.game %>" class="back-link">‚Üê Back to Categories</a>

        <div class="category-badge">Category: <%= category.name %>
        </div>

        <div class="header">
            <div>
                <h1>üìä Manage Metrics</h1>
                <p>Add, edit, or remove metrics for this category</p>
            </div>
            <div>
                <button class="btn btn-primary" onclick="openAddModal()">+ Add Metric</button>
                <button class="btn btn-secondary" onclick="openInitModal()">‚ö° Initialize Metrics</button>
            </div>
        </div>

        <div id="alertBox" class="alert"></div>

        <div class="stats">
            <div class="stat-card">
                <h3>Total Metrics</h3>
                <div class="number">
                    <%= metrics.length %>
                </div>
            </div>
            <div class="stat-card">
                <h3>With Grouping</h3>
                <div class="number">
                    <%= metrics.filter(m=> m.groupBy).length %>
                </div>
            </div>
            <div class="stat-card">
                <h3>Logic Types</h3>
                <div class="number">
                    <%= new Set(metrics.map(m=> m.logicType)).size %>
                </div>
            </div>
        </div>

        <% if (metrics.length===0) { %>
            <div class="no-metrics">
                <i>üì≠</i>
                <h2>No metrics yet</h2>
                <p>Add metrics manually or initialize them automatically from the API</p>
            </div>
            <% } else { %>
                <table class="metrics-table">
                    <thead>
                        <tr>
                            <th>Metric Name</th>
                            <th>Path</th>
                            <th>Logic Type</th>
                            <th>Group By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% metrics.forEach(metric=> { %>
                            <tr>
                                <td><strong>
                                        <%= metric.metricName %>
                                    </strong></td>
                                <td style="font-size: 0.85rem; color: #666;">
                                    <%= metric.metricPath %>
                                </td>
                                <td>
                                    <span class="logic-badge logic-<%= metric.logicType %>">
                                        <%= metric.logicType %>
                                    </span>
                                </td>
                                <td>
                                    <% if (metric.groupBy) { %>
                                        <span class="group-by-badge">
                                            <%= metric.groupBy %>
                                        </span>
                                        <% } else { %>
                                            <span style="color: #999;">-</span>
                                            <% } %>
                                </td>
                                <td>
                                    <div class="actions-cell">
                                        <button class="btn btn-edit"
                                            onclick="editMetric('<%= metric._id %>')">Edit</button>
                                        <button class="btn btn-delete"
                                            onclick="deleteMetric('<%= metric._id %>', '<%= metric.metricName %>')">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
    </div>

    <!-- Add Metric Modal -->
    <div id="addModal" class="modal">
        <div class="modal-content">
            <h2>‚ûï Add Metric</h2>
            <form id="addMetricForm">
                <div class="form-group">
                    <label for="metricName">Metric Name *</label>
                    <input type="text" id="metricName" required>
                </div>

                <div class="form-group">
                    <label for="metricPath">Metric Path *</label>
                    <input type="text" id="metricPath" placeholder="e.g., data.stats.kills" required>
                    <div class="help-text">Dot notation path to the value in API response</div>
                </div>

                <div class="form-group">
                    <label for="logicType">Logic Type *</label>
                    <select id="logicType" required>
                        <option value="none">None (Display as-is)</option>
                        <option value="count">Count</option>
                        <option value="sum">Sum</option>
                        <option value="avg">Average</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="groupBy">Group By</label>
                    <input type="text" id="groupBy" placeholder="e.g., teamId">
                    <div class="help-text">Optional: Group data by this field</div>
                </div>

                <div class="form-group">
                    <label for="customizationOptions">Customization Options</label>
                    <textarea id="customizationOptions" rows="3"></textarea>
                </div>

                <div class="modal-buttons">
                    <button type="submit" class="btn btn-primary">Add Metric</button>
                    <button type="button" class="btn btn-secondary" onclick="closeAddModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Metric Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <h2>‚úèÔ∏è Edit Metric</h2>
            <form id="editMetricForm">
                <input type="hidden" id="editMetricId">

                <div class="form-group">
                    <label for="editMetricName">Metric Name *</label>
                    <input type="text" id="editMetricName" required>
                </div>

                <div class="form-group">
                    <label for="editMetricPath">Metric Path *</label>
                    <input type="text" id="editMetricPath" required>
                </div>

                <div class="form-group">
                    <label for="editLogicType">Logic Type *</label>
                    <select id="editLogicType" required>
                        <option value="none">None (Display as-is)</option>
                        <option value="count">Count</option>
                        <option value="sum">Sum</option>
                        <option value="avg">Average</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="editGroupBy">Group By</label>
                    <input type="text" id="editGroupBy">
                </div>

                <div class="form-group">
                    <label for="editCustomizationOptions">Customization Options</label>
                    <textarea id="editCustomizationOptions" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="editPlayerUnique">Player Unique</label>
                    <select id="editPlayerUnique">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                    <div class="help-text">Is this metric unique per player?</div>
                </div>

                <div class="form-group">
                    <label for="editSeparatorPath">Separator Path</label>
                    <input type="text" id="editSeparatorPath" placeholder="e.g., metadata.matchid">
                    <div class="help-text">Path to unique identifier (for progress tracking)</div>
                </div>


                <div class="modal-buttons">
                    <button type="submit" class="btn btn-primary">Update Metric</button>
                    <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Initialize Metrics Modal -->
    <div id="initModal" class="modal">
        <div class="modal-content">
            <h2>‚ö° Initialize Metrics</h2>
            <p>Automatically extract metrics from the API response</p>

            <div class="form-group" style="margin-top: 20px;">
                <label>Extraction Depth</label>
                <input type="number" id="depth" value="4" min="1" max="10">
                <div class="help-text">How deep to traverse the API response (1-10)</div>
            </div>

            <div id="parametersInput"></div>

            <div class="modal-buttons">
                <button class="btn btn-primary" onclick="initializeMetrics()">Initialize</button>
                <button class="btn btn-secondary" onclick="closeInitModal()">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        const token = localStorage.getItem('token') || 'YOUR_JWT_TOKEN_HERE';
        const categoryId = '<%= category._id %>';
        const categoryParameters = JSON.parse('<%- JSON.stringify(category.parameters) %>');

        // Add Modal Functions
        function openAddModal() {
            document.getElementById('addModal').style.display = 'block';
        }

        function closeAddModal() {
            document.getElementById('addModal').style.display = 'none';
            document.getElementById('addMetricForm').reset();
        }

        document.getElementById('addMetricForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = {
                category: categoryId,
                metricName: document.getElementById('metricName').value,
                metricPath: document.getElementById('metricPath').value,
                logicType: document.getElementById('logicType').value,
                groupBy: document.getElementById('groupBy').value || undefined,
                customizationOptions: document.getElementById('customizationOptions').value || undefined
            };

            try {
                const response = await fetch('http://localhost:5000/api/category-metrics', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert(data.message || 'Metric added successfully!', 'success');
                    closeAddModal();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message || 'Failed to add metric', 'error');
                }
            } catch (error) {
                showAlert('Network error. Please try again.', 'error');
                console.error('Error:', error);
            }
        });

        // Edit Modal Functions
        async function editMetric(metricId) {
            try {
                const response = await fetch(`http://localhost:5000/api/category-metrics/${metricId}`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const metric = await response.json();

                if (response.ok) {
                    document.getElementById('editMetricId').value = metric._id;
                    document.getElementById('editMetricName').value = metric.metricName;
                    document.getElementById('editMetricPath').value = metric.metricPath;
                    document.getElementById('editLogicType').value = metric.logicType || 'none';
                    document.getElementById('editGroupBy').value = metric.groupBy || '';
                    document.getElementById('editPlayerUnique').value = metric.playerUnique ? 'true' : 'false';
                    document.getElementById('editSeparatorPath').value = metric.separatorPath || '';
                    document.getElementById('editCustomizationOptions').value = metric.customizationOptions || '';

                    document.getElementById('editModal').style.display = 'block';
                } else {
                    showAlert('Failed to load metric', 'error');
                }
            } catch (error) {
                showAlert('Network error', 'error');
                console.error('Error:', error);
            }
        }


        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
            document.getElementById('editMetricForm').reset();
        }

        document.getElementById('editMetricForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const metricId = document.getElementById('editMetricId').value;
            const formData = {
                category: categoryId,
                metricName: document.getElementById('editMetricName').value,
                metricPath: document.getElementById('editMetricPath').value,
                logicType: document.getElementById('editLogicType').value,
                groupBy: document.getElementById('editGroupBy').value || undefined,
                playerUnique: document.getElementById('editPlayerUnique').value === 'true',
                separatorPath: document.getElementById('editSeparatorPath').value || undefined,
                customizationOptions: document.getElementById('editCustomizationOptions').value || undefined,
                
            };

            try {
                const response = await fetch(`http://localhost:5000/api/category-metrics/${metricId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert(data.message || 'Metric updated successfully!', 'success');
                    closeEditModal();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message || 'Failed to update metric', 'error');
                }
            } catch (error) {
                showAlert('Network error. Please try again.', 'error');
                console.error('Error:', error);
            }
        });

        // Delete Function
        async function deleteMetric(metricId, metricName) {
            if (!confirm(`Are you sure you want to delete metric "${metricName}"?`)) {
                return;
            }

            try {
                const response = await fetch(`http://localhost:5000/api/category-metrics/${metricId}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert(data.message || 'Metric deleted successfully!', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message || 'Failed to delete metric', 'error');
                }
            } catch (error) {
                showAlert('Network error. Please try again.', 'error');
                console.error('Error:', error);
            }
        }

        // Initialize Metrics Functions
        function openInitModal() {
            buildParameterInputs();
            document.getElementById('initModal').style.display = 'block';
        }

        function closeInitModal() {
            document.getElementById('initModal').style.display = 'none';
        }

        function buildParameterInputs() {
            const container = document.getElementById('parametersInput');
            container.innerHTML = '<h3 style="margin-top: 20px;">Parameter Values</h3>';

            categoryParameters.forEach(param => {
                const div = document.createElement('div');
                div.className = 'form-group';
                div.innerHTML = `
                    <label>${param.name} ${param.required ? '*' : ''}</label>
                    <input 
                        type="text" 
                        id="param_${param.name}" 
                        placeholder="Enter ${param.name}"
                        ${param.required ? 'required' : ''}
                    >
                `;
                container.appendChild(div);
            });
        }

        async function initializeMetrics() {
            const parameters = {};
            let isValid = true;

            categoryParameters.forEach(param => {
                const value = document.getElementById(`param_${param.name}`).value.trim();
                if (param.required && !value) {
                    alert(`Please provide value for ${param.name}`);
                    isValid = false;
                    return;
                }
                if (value) {
                    parameters[param.name] = value;
                }
            });

            if (!isValid) return;

            const depth = document.getElementById('depth').value;

            closeInitModal();
            showAlert('Initializing metrics... Please wait.', 'success');

            try {
                const response = await fetch('http://localhost:5000/api/category-metrics/initialize', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({
                        categoryId: categoryId,
                        depth: parseInt(depth),
                        parameters: parameters
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert(`Success! ${data.totalMetrics} metrics initialized.`, 'success');
                    setTimeout(() => location.reload(), 2000);
                } else {
                    showAlert('Failed to initialize metrics: ' + data.message, 'error');
                }
            } catch (error) {
                showAlert('Network error. Please try again.', 'error');
                console.error('Error:', error);
            }
        }

        // Alert Function
        function showAlert(message, type) {
            const alertBox = document.getElementById('alertBox');
            alertBox.textContent = message;
            alertBox.className = `alert alert-${type}`;
            alertBox.style.display = 'block';

            setTimeout(() => {
                alertBox.style.display = 'none';
            }, 5000);
        }

        // Close modals when clicking outside
        window.onclick = function (event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        }
    </script>
</body>

</html>