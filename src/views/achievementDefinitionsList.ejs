<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Achievement Definitions - <%= category.name %>
    </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 30px;
        }

        h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 2.5rem;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .category-badge {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-delete {
            background: #f44336;
            color: white;
            padding: 6px 12px;
            font-size: 0.85rem;
        }

        .btn-edit {
            background: #4CAF50;
            color: white;
            padding: 6px 12px;
            font-size: 0.85rem;
        }

        .btn-secondary {
            background: #f5f5f5;
            color: #333;
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #667eea;
            text-decoration: none;
            font-weight: bold;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .achievements-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .achievements-table th,
        .achievements-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .achievements-table th {
            background: #f5f5f5;
            font-weight: bold;
            color: #333;
        }

        .achievements-table tr:hover {
            background: #f9f9f9;
        }

        .active-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: bold;
        }

        .active-yes {
            background: #d4edda;
            color: #155724;
        }

        .active-no {
            background: #f8d7da;
            color: #721c24;
        }

        .alert {
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            display: none;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .no-achievements {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }

        .no-achievements i {
            font-size: 4rem;
            margin-bottom: 20px;
            display: block;
        }

        .actions-cell {
            display: flex;
            gap: 5px;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            margin: 3% auto;
            padding: 30px;
            border-radius: 10px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.3);
            max-height: 85vh;
            overflow-y: auto;
        }

        .modal h2 {
            margin-bottom: 20px;
            color: #333;
        }

        .modal-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
        }

        input,
        select,
        textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 5px;
            font-size: 1rem;
            font-family: inherit;
        }

        input:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #667eea;
        }

        .help-text {
            font-size: 0.85rem;
            color: #666;
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="container">
        <a href="/categories/game/<%= category.game %>" class="back-link">‚Üê Back to Categories</a>

        <div class="category-badge">Category: <%= category.name %>
        </div>

        <div class="header">
            <div>
                <h1>üèÜ Achievement Definitions</h1>
                <p>Manage achievement definitions for this category</p>
            </div>
            <button class="btn btn-primary" onclick="openAddModal()">+ Add Achievement</button>
        </div>

        <div id="alertBox" class="alert"></div>

        <% if (achievements.length===0) { %>
            <div class="no-achievements">
                <i>üéØ</i>
                <h2>No achievements yet</h2>
                <p>Create achievement definitions to track player progress</p>
            </div>
            <% } else { %>
                <table class="achievements-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Points</th>
                            <th>Required Amount</th>
                            <th>Metric</th>
                            <th>Active</th>
                            <th>Expiration</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% achievements.forEach(achievement=> { %>
                            <tr>
                                <td><strong>
                                        <%= achievement.name %>
                                    </strong></td>
                                <td>
                                    <%= achievement.description %>
                                </td>
                                <td>
                                    <%= achievement.points %>
                                </td>
                                <td>
                                    <%= achievement.requiredAmount %>
                                </td>
                                <td style="font-size: 0.85rem; color: #666;">
                                    <%= achievement.categoryMetric ? achievement.categoryMetric.metricName : 'N/A' %>
                                </td>
                                <td>
                                    <span class="active-badge <%= achievement.isActive ? 'active-yes' : 'active-no' %>">
                                        <%= achievement.isActive ? 'Yes' : 'No' %>
                                    </span>
                                </td>
                                <td style="font-size: 0.85rem;">
                                    <%= new Date(achievement.expirationDate).toLocaleDateString() %>
                                </td>
                                <td>
                                    <div class="actions-cell">
                                        <button class="btn btn-edit"
                                            onclick="editAchievement('<%= achievement._id %>')">Edit</button>
                                        <button class="btn btn-delete"
                                            onclick="deleteAchievement('<%= achievement._id %>', '<%= achievement.name %>')">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
    </div>

    <!-- Add Achievement Modal -->
    <div id="addModal" class="modal">
        <div class="modal-content">
            <h2>‚ûï Add Achievement Definition</h2>
            <form id="addAchievementForm">
                <div class="form-group">
                    <label for="name">Name *</label>
                    <input type="text" id="name" required>
                </div>

                <div class="form-group">
                    <label for="description">Description *</label>
                    <textarea id="description" rows="3" required></textarea>
                </div>

                <div class="form-group">
                    <label for="points">Points *</label>
                    <input type="number" id="points" min="1" required>
                </div>

                <div class="form-group">
                    <label for="requiredAmount">Required Amount *</label>
                    <input type="number" id="requiredAmount" min="1" required>
                    <div class="help-text">How many times the metric must be achieved</div>
                </div>

                <div class="form-group">
                    <label for="categoryMetric">Category Metric (Sum only) *</label>
                    <select id="categoryMetric" required>
                        <option value="">Select a metric</option>
                        <% metrics.filter(m=> m.logicType === 'sum').forEach(metric => { %>
                            <option value="<%= metric._id %>">
                                <%= metric.metricName %> (<%= metric.metricPath %>)
                            </option>
                            <% }) %>
                    </select>
                    <div class="help-text">Only metrics with 'sum' logic can be used for achievements</div>
                </div>


                <div class="form-group">
                    <label for="isActive">Active</label>
                    <select id="isActive">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="expirationDate">Expiration Date *</label>
                    <input type="date" id="expirationDate" required>
                </div>

                <div class="modal-buttons">
                    <button type="submit" class="btn btn-primary">Add Achievement</button>
                    <button type="button" class="btn btn-secondary" onclick="closeAddModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Achievement Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <h2>‚úèÔ∏è Edit Achievement Definition</h2>
            <form id="editAchievementForm">
                <input type="hidden" id="editAchievementId">

                <div class="form-group">
                    <label for="editName">Name *</label>
                    <input type="text" id="editName" required>
                </div>

                <div class="form-group">
                    <label for="editDescription">Description *</label>
                    <textarea id="editDescription" rows="3" required></textarea>
                </div>

                <div class="form-group">
                    <label for="editPoints">Points *</label>
                    <input type="number" id="editPoints" min="1" required>
                </div>

                <div class="form-group">
                    <label for="editRequiredAmount">Required Amount *</label>
                    <input type="number" id="editRequiredAmount" min="1" required>
                </div>

                <div class="form-group">
                    <label for="editCategoryMetric">Category Metric (Sum only) *</label>
                    <select id="editCategoryMetric" required>
                        <option value="">Select a metric</option>
                        <% metrics.filter(m=> m.logicType === 'sum').forEach(metric => { %>
                            <option value="<%= metric._id %>">
                                <%= metric.metricName %> (<%= metric.metricPath %>)
                            </option>
                            <% }) %>
                    </select>
                    <div class="help-text">Only metrics with 'sum' logic can be used for achievements</div>
                </div>


                <div class="form-group">
                    <label for="editIsActive">Active</label>
                    <select id="editIsActive">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="editExpirationDate">Expiration Date *</label>
                    <input type="date" id="editExpirationDate" required>
                </div>

                <div class="modal-buttons">
                    <button type="submit" class="btn btn-primary">Update Achievement</button>
                    <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const token = localStorage.getItem('token') || 'YOUR_JWT_TOKEN_HERE';
        const categoryId = '<%= category._id %>';

        // Add Modal
        function openAddModal() {
            document.getElementById('addModal').style.display = 'block';
        }

        function closeAddModal() {
            document.getElementById('addModal').style.display = 'none';
            document.getElementById('addAchievementForm').reset();
        }

        document.getElementById('addAchievementForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = {
                name: document.getElementById('name').value,
                description: document.getElementById('description').value,
                points: parseInt(document.getElementById('points').value),
                requiredAmount: parseInt(document.getElementById('requiredAmount').value),
                categoryMetric: document.getElementById('categoryMetric').value,
                isActive: document.getElementById('isActive').value === 'true',
                expirationDate: document.getElementById('expirationDate').value
            };

            try {
                const response = await fetch('http://localhost:5000/api/achievement-definition', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert('Achievement created successfully!', 'success');
                    closeAddModal();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message || 'Failed to create achievement', 'error');
                }
            } catch (error) {
                showAlert('Network error. Please try again.', 'error');
                console.error('Error:', error);
            }
        });

        // Edit Modal
        async function editAchievement(achievementId) {
            try {
                const response = await fetch(`http://localhost:5000/api/achievement-definition/${achievementId}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                const achievement = await response.json();

                if (response.ok) {
                    document.getElementById('editAchievementId').value = achievement._id;
                    document.getElementById('editName').value = achievement.name;
                    document.getElementById('editDescription').value = achievement.description;
                    document.getElementById('editPoints').value = achievement.points;
                    document.getElementById('editRequiredAmount').value = achievement.requiredAmount;
                    document.getElementById('editCategoryMetric').value = achievement.categoryMetric;
                    document.getElementById('editIsActive').value = achievement.isActive ? 'true' : 'false';
                    document.getElementById('editExpirationDate').value = new Date(achievement.expirationDate).toISOString().split('T')[0];

                    document.getElementById('editModal').style.display = 'block';
                } else {
                    showAlert('Failed to load achievement', 'error');
                }
            } catch (error) {
                showAlert('Network error', 'error');
                console.error('Error:', error);
            }
        }

        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
            document.getElementById('editAchievementForm').reset();
        }

        document.getElementById('editAchievementForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const achievementId = document.getElementById('editAchievementId').value;
            const formData = {
                name: document.getElementById('editName').value,
                description: document.getElementById('editDescription').value,
                points: parseInt(document.getElementById('editPoints').value),
                requiredAmount: parseInt(document.getElementById('editRequiredAmount').value),
                categoryMetric: document.getElementById('editCategoryMetric').value,
                isActive: document.getElementById('editIsActive').value === 'true',
                expirationDate: document.getElementById('editExpirationDate').value
            };

            try {
                const response = await fetch(`http://localhost:5000/api/achievement-definition/${achievementId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert('Achievement updated successfully!', 'success');
                    closeEditModal();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message || 'Failed to update achievement', 'error');
                }
            } catch (error) {
                showAlert('Network error. Please try again.', 'error');
                console.error('Error:', error);
            }
        });

        // Delete
        async function deleteAchievement(achievementId, achievementName) {
            if (!confirm(`Are you sure you want to delete "${achievementName}"? This will also delete all player achievements.`)) {
                return;
            }

            try {
                const response = await fetch(`http://localhost:5000/api/achievement-definition/${achievementId}`, {
                    method: 'DELETE',
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                const data = await response.json();

                if (response.ok) {
                    showAlert('Achievement deleted successfully!', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert(data.message || 'Failed to delete achievement', 'error');
                }
            } catch (error) {
                showAlert('Network error. Please try again.', 'error');
                console.error('Error:', error);
            }
        }

        // Alert
        function showAlert(message, type) {
            const alertBox = document.getElementById('alertBox');
            alertBox.textContent = message;
            alertBox.className = `alert alert-${type}`;
            alertBox.style.display = 'block';

            setTimeout(() => {
                alertBox.style.display = 'none';
            }, 5000);
        }

        // Close modals on outside click
        window.onclick = function (event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        }
    </script>
</body>

</html>